{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "align": [true, "parameters", "statements", "members", "elements"],
    "await-promise": [true],
    "ban-comma-operator": true,
    "completed-docs": true,
    "indent": [true, "spaces", 2],
    "jsdoc-format": [true, "check-multiline-start"],
    "max-line-length": [true, 120],
    "member-access": [true],
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": true,
    "no-implicit-dependencies": true,
    "no-redundant-jsdoc": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-submodule-imports": true,
    "no-this-assignment": true,
    "no-unused-expression": true,
    "no-var-requires": true,
    "one-line": [true, "check-else", "check-whitespace", "check-open-brace"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "strict-boolean-expressions": [true, "allow-boolean-or-undefined"],
    "typedef": [true, "call-signature"],
    "typedef-whitespace": [true, {
      "call-signature": "nospace",
      "index-signature": "nospace",
      "parameter": "nospace",
      "property-declaration": "nospace",
      "variable-declaration": "nospace"
    }],
    "variable-name": [true, "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-preblock", "check-type"]
  }
}
